@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<Layout1x2, ContentBlockSettings>>

@{
    if (Model?.Areas.Count() != 2) { return; }
    var themeColorsCss = Model.Settings?.GetThemeCss();
}
 
<div id="layout1x2" class="@themeColorsCss">
    @await Html.GetPreviewBlockGridItemAreasHtmlAsync(Model)
</div>