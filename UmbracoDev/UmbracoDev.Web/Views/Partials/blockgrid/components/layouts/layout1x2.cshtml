@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<Layout1x2, LayoutSettings>>

@{
    if (Model?.Areas.Count() != 2) { return; }
    var themeColorsCss = Model.Settings?.GetThemeClasses();
}
 
<div class="w-full @themeColorsCss py-4">
    @await Html.GetBlockGridItemAreasHtmlAsync(Model)
</div>