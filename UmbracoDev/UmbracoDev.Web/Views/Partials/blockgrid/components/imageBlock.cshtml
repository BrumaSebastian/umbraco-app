@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ImageBlock, ImageBlockSettings>>
@{
    if (Model.Content.Image is null) return;
    var paddingStyle = Model.Settings?.GenerateCss<IPaddingProperties>();
    var imageStyle = Model.Settings?.GenerateCss<IImageBlockProperties>(Compositions.IMAGE);
    var src = Model.Content.Image.Path == "" ? "/assets/placeholder_400x300.png" : Model.Content.Image.GetCropUrl();
}

<img src="@src" alt="alt text" style="@imageStyle" />

